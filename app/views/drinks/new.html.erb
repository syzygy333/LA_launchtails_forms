<div class="row">
  <%- if @drink.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @drink.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

  <div class="large-12">
    <h1>New Drink</h1>

    <%= form_for @drink do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= label_tag(:category, "Category") %>
      <%= select_tag(:category, options_for_select([['Category 1', 1], ['Category 2', 2], ['Category 3', 3], ['Category 4', 4]])) %>

      <%= f.radio_button :alcohol_level, 'Low' %>
      <%= f.label :alcohol_level_low, 'Low' %>
      <%= f.radio_button :alcohol_level, 'Medium' %>
      <%= f.label :alcohol_level_medium, 'Medium' %>
      <%= f.radio_button :alcohol_level, 'High' %>
      <%= f.label :alcohol_level_high, 'High' %>
      
      <%= check_box_tag(:featured) %>
      <%= label_tag(:featured, "Featured") %>

      <%= f.submit "Add Drink" %>
    <%- end -%>
  </div>
</div>
